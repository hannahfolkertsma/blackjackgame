@model blackjack.Models.GameViewModel
@{
    ViewData["Title"] = "Home Page";
}

<script src="//code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".start").click(function () {
            $.ajax({
                type: "POST",
                url:  "@Url.Action("Start", "Home")",
                success: function  (response) {
                    console.log("test");
                    console.log(response);
                   
                },
                error: function (jqXHR, textStatus, errorThrown) {
        console.log(errorThrown);
        console.log(textStatus);
    }
            })
        });
    });
</script>

<div class="text-center">
    <h1 class="display-4">blackjack</h1>
    <form >
        <asp:Button class="start">start</asp:Button>
        <asp:Button class="hit">hit</asp:Button>
        <asp:Button class="stand">stand</asp:Button>
            <div id="cardscontainer">
            @if (Model != null)
            {
                <img src="%="UrlAction("images", Model.playerhand[0].image)"%"/>
            }
        </div>
        
    </form>
</div>

